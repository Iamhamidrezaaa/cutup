{
  "manifest_version": 3,
  "name": "Cutup - خلاصه‌ساز هوشمند",
  "version": "1.0.0",
  "description": "تبدیل ویدئو و صوت به متن و خلاصه هوشمند با AI",
  "permissions": [
    "storage",
    "activeTab",
    "clipboardRead"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://youtube.com/*",
    "https://youtu.be/*",
    "https://*.vercel.app/*",
    "http://195.248.240.108:3001/*",
    "http://localhost:3001/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*.vercel.app https://api.openai.com http://195.248.240.108:3001 http://localhost:3001 https://www.youtube.com https://youtube.com;"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://cutup.shop/*",
        "http://cutup.shop/*"
      ],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ]
}

